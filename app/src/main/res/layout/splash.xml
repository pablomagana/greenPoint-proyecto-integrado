<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.greenpoint.SplashActivity"
    android:background="@color/amarillo"
    android:orientation="horizontal"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:textSize="45dp"
                android:textColor="@color/verde"
                android:text="Green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ico_green"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ico_logo"
                android:layout_marginLeft="5px"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:textSize="45dp"
                android:text="Pointer"
                android:textColor="@color/gris"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ico_point"
                android:layout_below="@+id/ico_point"
                android:layout_toEndOf="@+id/ico_point"
                android:layout_marginRight="5px"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:visibility="invisible" />


        </LinearLayout>

        <ImageView
            android:src="@drawable/logo3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ico_logo"
            android:layout_below="@+id/ico_point"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_weight="3"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</LinearLayout>
